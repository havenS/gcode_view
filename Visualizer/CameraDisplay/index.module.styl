.container {
    border-radius: 5px;
    background: rgba(107, 114, 128, 0.5);
    width: 97px;
    position: absolute;
    left: 1.25rem;
    bottom: 1.25rem;
}

.viewTitle {
    margin-top: 92%;
    color: #d1d5db;
    margin-bottom: 5%;
    font-size: large;
    text-align: center;
}

.buttonContainer {
    width: 50%;
}

.faceTop {
    transform: scale(-1, 1);
    clip-path: polygon(
        67% 34%,
        49.5% 36.5%,
        15.2% 26.8%,
        10.8% 18.8%,
        30.5% 2.5%,
        46.3% 0.5%,
        82% 9.5%,
        87% 17.5%
    );
    position: absolute;
    left: 12px;
    top: 10px;
    background-color: white;
    width: 75px;
    height: 75px;
    border: none;
    outline: none;
    transition: ease-in-out 200ms;
    &:hover {
        background: #0ef6ae;
    }
}

